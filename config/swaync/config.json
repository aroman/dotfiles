{
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "overlay",
  "control-center-positionX": "right",
  "control-center-positionY": "top",
  "control-center-width": 420,
  "control-center-height": -1,
  "control-center-margin-top": 8,
  "control-center-margin-right": 8,
  "control-center-margin-bottom": 8,
  "fit-to-screen": false,

  "notification-window-width": 400,
  "notification-icon-size": 48,
  "notification-body-image-height": 120,
  "notification-body-image-width": 200,

  "timeout": 8,
  "timeout-low": 4,
  "timeout-critical": 0,

  "transition-time": 200,
  "hide-on-clear": true,
  "hide-on-action": true,
  "keyboard-shortcuts": true,
  "relative-timestamps": true,
  "notification-grouping": true,
  "notification-2fa-action": true,

  "widgets": [
    "title",
    "buttons-grid",
    "mpris",
    "volume",
    "backlight",
    "dnd",
    "notifications"
  ],

  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "WiFi",
          "type": "toggle",
          "active": true,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && nmcli radio wifi on || nmcli radio wifi off'",
          "update-command": "sh -c '[[ $(nmcli radio wifi) == \"enabled\" ]] && echo true || echo false'"
        },
        {
          "label": "Bluetooth",
          "type": "toggle",
          "active": true,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && bluetoothctl power on || bluetoothctl power off'",
          "update-command": "sh -c 'bluetoothctl show | grep -q \"Powered: yes\" && echo true || echo false'"
        },
        {
          "label": "DND",
          "type": "toggle",
          "command": "swaync-client -d",
          "update-command": "swaync-client -D"
        }
      ]
    },
    "volume": {
      "label": "Volume",
      "show-per-app": true,
      "show-per-app-icon": true,
      "show-per-app-label": true,
      "empty-list-label": "No audio playing",
      "expand-button-label": "Apps",
      "collapse-button-label": "Hide",
      "animation-type": "slide_down",
      "animation-duration": 200
    },
    "backlight": {
      "label": "Brightness",
      "subsystem": "backlight",
      "min": 5
    },
    "mpris": {
      "image-size": 80,
      "image-radius": 8
    },
    "dnd": {
      "text": "Do Not Disturb"
    }
  }
}
